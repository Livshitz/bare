{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		 "strictNullChecks": false,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "dist",
		"baseUrl": ".",
    	"types": ["bun", "node"],
		"paths": {
			"@/*": ["src/*"],
			"@bod.ee/bare/*": ["src/*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
	"vueCompilerOptions": {
		"plugins": [
		"@vue/language-plugin-pug"
		]
	}
}
