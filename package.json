{
	"name": "@livz/bare",
	"version": "2.0.4",
	"type": "module",
	"style": "dist/bare.css",
	"unpkg": "dist/bare.css",
	"jsdelivr": "dist/bare.css",
	"private": false,
	"scripts": {
		"dev": "vite --host",
		"demo": "vite --config vite-demo.config.ts",
		"watch:lib": "concurrently \"bun run watch:scss\" \"bun run watch:components\"",
		"watch:scss": "bunx postcss src/index.scss --parser postcss-scss --use tailwindcss autoprefixer -o dist/bare.css --watch",
		"watch:components": "vite build --watch",
		"build": "vite build",
		"build:lib": "concurrently \"bun run build-scss\" \"bun run build:components\"",
		"build:components": "vite build",
		"build-scss": "bunx postcss src/theme/index.scss --parser postcss-scss --use tailwindcss autoprefixer -o dist/bare.css",
		"build:demo": "vite build",
		"test": "jest",
		"test:debug": "node --inspect node_modules/.bin/jest",
		"release:patch": "npm version patch -m \"chore(release): bump version to %s\" && npm publish",
		"webify": "bun run webify.libx.js webify/index.ts -o demo/public/lib/webify.js -f umd",
		"build-readme": "node scripts/build-readme.js",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,scss,css}\"",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue"
	},
	"files": [
		"dist",
		"src",
		"meta",
		"LLMs.md",
		"README.md"
	],
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js"
		},
		"./components": {
			"import": "./dist/components.es.js",
			"require": "./dist/components.umd.js"
		}
	},
	"dependencies": {
		"@types/dompurify": "^3.2.0",
		"@types/markdown-it": "^14.1.2",
		"daisyui": "^5.0.35",
		"dompurify": "^3.2.5",
		"markdown-it": "^14.1.0",
		"pug-browser": "^0.0.20",
		"vue-router": "^4.5.0",
		"webify.libx.js": "^1.0.7"
	},
	"devDependencies": {
		"@types/bun": "^1.2.15",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.29",
		"@types/pug": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vue/compiler-sfc": "^3.5.13",
		"@vue/language-plugin-pug": "^2.2.10",
		"ajv": "latest",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.2",
		"esbuild": "^0.25.3",
		"eslint": "latest",
		"eslint-plugin-vue": "latest",
		"html2jade": "^0.8.6",
		"jest": "^29.7.0",
		"less": "3",
		"libx.js": "^5.0.1",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"postcss-scss": "^4.0.9",
		"prettier": "latest",
		"pug": "^3.0.3",
		"sass": "^1.87.0",
		"tailwindcss": "^3.4.1",
		"ts-jest": "^29.3.2",
		"typescript": "latest",
		"vite": "^6.3.4",
		"vue": "^3.5.13"
	},
	"publishConfig": {
		"access": "public"
	}
}
